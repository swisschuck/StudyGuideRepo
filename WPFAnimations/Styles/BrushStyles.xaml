<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPFAnimations.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>

            <SolidColorBrush x:Key="GreenBrush" Color="#748c06" />
            <SolidColorBrush x:Key="WhiteBrush" Color="White" />
            <SolidColorBrush x:Key="LightGreenBrush" Color="#d7e4bd" />
            <SolidColorBrush x:Key="BlackBrush" Color="Black" />
            <SolidColorBrush x:Key="ComplentaryBrush" Color="#8b73f9" />
            <SolidColorBrush x:Key="TransparentGrayBrush" Color="Gray" Opacity="0.5"/> <!--if you want the container to be transparent but child controls not to be-->

        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>